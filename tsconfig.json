{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "incremental": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "jest-gherkin",
    ],
    "allowJs": true,
    "lib": [
      "es6"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "sample"
  ],
  "references": [
    {
      "path": "packages/reflect"
    },
    {
      "path": "packages/types"
    },
    {
      "path": "packages/parser"
    },
    {
      "path": "packages/mockingbird"
    }
  ]
}

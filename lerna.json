{
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": ["master", "next"],
      "message": "chore(packages): release packages [skip ci]",
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": ["master", "next"],
      "message": "chore(packages): version packages [skip ci]",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": ["sample"],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "packages": [
    "!sample",
    "packages/*"
  ]
}
